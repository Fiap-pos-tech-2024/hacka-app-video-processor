{
  "preset": "ts-jest/presets/default-esm",
  "extensionsToTreatAsEsm": [".ts"],
  "testEnvironment": "node",
  "roots": ["<rootDir>/src", "<rootDir>/tests"],
  "testMatch": [
    "**/__tests__/**/*.test.ts",
    "**/?(*.)+(spec|test).ts"
  ],  "transform": {
    "^.+\\.ts$": ["ts-jest", {
      "useESM": true,
      "tsconfig": {
        "module": "ESNext",
        "moduleResolution": "Node"
      }
    }]
  },"moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1",
    "^../../../src/(.*)$": "<rootDir>/src/$1",
    "^../../src/(.*)$": "<rootDir>/src/$1",
    "^../src/(.*)$": "<rootDir>/src/$1"
  },
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/**/*.d.ts",
    "!src/index.ts",
    "!src/scripts/**/*"
  ],
  "coverageReporters": ["text", "lcov", "html"],
  "coverageDirectory": "coverage"
}
